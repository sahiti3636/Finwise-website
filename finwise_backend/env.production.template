# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# AI Service
GEMINI_API_KEY=your-gemini-api-key-here

# Host Configuration
ALLOWED_HOSTS=your-render-service.onrender.com,your-custom-domain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-custom-domain.com

# Security Settings (these will be set automatically in production)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True 